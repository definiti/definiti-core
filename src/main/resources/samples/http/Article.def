package samplehttp

import samplehttp.User

import samplehttp.Title
import samplehttp.Content
import samplehttp.ErrorMessage

type ArticleCreation {
  title: Title
  content: Content
}

type ArticleCreationErrors {
  title: ErrorMessage
  content: ErrorMessage
}

type ArticleUpdate = ArticleCreation

type ArticleUpdateErrors = ArticleCreationErrors

type ReadArticle {
  title: Title
  content: Content
  date: Date
  writer: User
}

type ArticleMeta {
  title: Title
  date: Date
  writer: User
}

type SearchErrors {
  query: ErrorMessage
  order: ErrorMessage
  limit: ErrorMessage
}
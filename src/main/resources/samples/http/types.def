package samplehttp

type Title = String
  verifying RequiredString
  verifying StringMaxlength250

type Content = String
  verifying RequiredString

type ErrorMessage = String

verification RequiredString {
  "Please provide a valid string"
  (string: String) => {
    string.trim().nonEmpty()
  }
}

verification StringMaxlength250 {
  "The string should not be over 250 characters"
  (string: String) => {
    string.length <= 250
  }
}